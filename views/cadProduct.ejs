  <form action="/cadProduct" method="POST">
    <div class="cadastro container d-flex justify-content-center">
      <div class="p-5 bg-body-tertiary rounded-3 text-center">
        <div class="form-floating mb-3" style="width: 300px">
          <input
            type="text"
            class="form-control"
            id="floatingInputLote"
            placeholder="Lote do produto"
            name="prodLote"
          />
          <label for="floatingInputLote">Lote do produto</label>
        </div>
        <div class="form-floating mb-3" style="width: 300px">
          <input
            type="text"
            class="form-control"
            id="floatingInputName"
            placeholder="Nome do produto"
            name="prodName"
          />
          <label for="floatingInputName">Nome do produto</label>
        </div>
        <div class="form-floating" style="width: 300px">
          <div class="input-group date mb-3" id="datepicker">
            <input
              type="text"
              class="form-control"
              id="floatingInputDate"
              placeholder="Data de validade"
              name="prodDate"
            />
            <span class="input-group-append h-100">
              <span class="input-group-text d-flex align-items-center">
                <i class="fa fa-calendar" style="font-size: 1.5rem"></i>
              </span>
            </span>
          </div>

          <script type="text/javascript">
            $(function () {
              $('#datepicker').datepicker({
                format: 'dd/mm/yyyy',
                language: 'pt-BR',
              });
            });
          </script>
          
          <select
            class="form-select mb-3"
            aria-label="Default select example"
            name="select"
          >
            <option selected>Categoria</option>
            <option value="Genérico">Genérico</option>
            <option value="RX">RX</option>
            <option value="Controlados">Controlados</option>
            <option value="Antibioticos">Antibioticos</option>
            <option value="Perfumaria">Perfumaria</option>
            <option value="Alimentos">Alimentos</option>
            <option value="OTC">OTC</option>
          </select>
        </div>
        <div id="emailHelp" class="form-text mb-3"><%= alert %></div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
      </div>
    </div>
  </form>
